# Contributor: Tai Nguyen <tainv@its-global.vn>
# Maintainer: Tai Nguyen <tainv@its-global.vn>
pkgname=bluetooth-pkg
pkgver=0.0.1
pkgrel=0
pkgdesc="ble peripheral service"
url="git@github.com:tainv-its/sota-bluetooth.git"
license="Apache-2.0"
arch="aarch64"
makedepends="
    cargo
    dbus-dev
    "
source="git@github.com:tainv-its/sota-bluetooth.git/-/archive/$pkgver/sota-bluetooth-$pkgver.tar.gz"

build() {
    cargo build --frozen --release
}

package() {
    install -D -m755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}


