pkgname=sota-bluetooth
pkgver=0.1.1
pkgrel=0
pkgdesc="ble peripheral service"
url="https://git.its-global.vn/iot/sota-bluetooth.git"
license="Apache-2.0"
arch="aarch64"
makedepends="
    cargo
    dbus-dev
    "
source="https://git.its-global.vn/iot/sota-bluetooth.git/-/archive/$pkgver/sota-bluetooth-$pkgver.tar.gz"

build() {
    cargo build --frozen --release
}

package() {
    install -D -m755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}


